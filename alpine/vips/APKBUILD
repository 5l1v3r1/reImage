# Contributor: Will Jordan <will.jordan@gmail.com>
# Maintainer: Will Jordan <will.jordan@gmail.com>
pkgname=vips
pkgver=8.7.1
pkgrel=0
pkgdesc="A fast image processing library with low memory needs"
url="http://www.vips.ecs.soton.ac.uk/"
arch="all !s390x"
license="LGPL-2.1-or-later"
depends_dev="mozjpeg-dev libexif-dev lcms2-dev"
makedepends="$depends_dev fftw-dev giflib-dev glib-dev libpng-dev libwebp-dev
	expat-dev orc-dev tiff-dev"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang $pkgname-tools"
source="https://github.com/libvips/libvips/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz"

builddir="$srcdir/$pkgname-$pkgver"
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-debug=no \
		--without-python \
		--without-gsf \
		--disable-static \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--docdir=/usr/share/doc
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

tools() {
	pkgdesc="Command-line tools for $pkgname"
	mkdir -p "$subpkgdir"/usr/
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

sha512sums="c8fff2b1eea8d523712f8b70ec9c5c5f07de1e6f1962bed1ed80b4875a9af7fcd565384bb0187eade9ccffb81a0c96f4eebd5b8a5202f587064bb699fdf1233d  vips-8.7.1.tar.gz"
